{% extends 'bootstrap_3_layout.html.twig' %}

{% block _menu_addSection_row %}
<div class="form-group row">
  <div class="col-sm-10">
    {{ form_widget(form) }}
  </div>
  <div class="col-sm-2">
    <button type="button" class="btn btn-success pull-right" id="add-menu-section">Add a section</button>
  </div>
</div>
{% endblock %}

{% block _menu_hasMenuSection_entry_row %}
{% spaceless %}

  {% set headingSelector = form.vars.id ~ '_heading' %}
  {% set collapseSelector = form.vars.id ~ '_collapse' %}

  <div id="{{ form.vars.id }}" class="panel panel-default">

    <div class="panel-heading" role="tab" id="{{ headingSelector }}">
      <h4 class="panel-title">
        <a role="button"
          data-toggle="collapse" data-parent="#menu_hasMenuSection"
          href="#{{ collapseSelector }}"
          aria-expanded="true" aria-controls="{{ collapseSelector }}">
          {# form.vars may be null when used for prototype #}
          {{ form.vars.data ? form.vars.data.name : '' }}
          {{ form.vars.data ? '(' ~ form.vars.data.items|length ~ ')' : '' }}
        </a>
        <button type="button" class="btn btn-danger btn-xs pull-right"
          data-toggle="remove-menu-section" data-target="#{{ form.vars.id }}">Delete</button>
        <button class="btn btn-xs btn-success pull-right"
          style="margin-right: 15px;"
          data-toggle="add-menu-item" data-target="#{{ form.hasMenuItem.vars.id }}"><i class="fa fa-plus"></i> Add a new item</button>
      </h4>
    </div>

    <div id="{{ collapseSelector }}" class="panel-collapse collapse {% if form.vars.name < 1 %}in{% endif %}" role="tabpanel" aria-labelledby="{{ headingSelector }}">
      {{ form_row(form.hasMenuItem, { attr: {class: 'list-group' } }) }}
    </div>

  </div>

{% endspaceless %}
{% endblock %}

{% block _menu_hasMenuSection_entry_hasMenuItem_row %}
  <div class="list-group">
    {{- form_label(form) -}}
    {{- form_widget(form) -}}
    {{- form_errors(form) -}}
  </div>
{% endblock %}

{% block _menu_hasMenuSection_entry_hasMenuItem_entry_row %}
{% spaceless %}
  <div class="list-group-item">
    <div class="form-group row">
      <div class="col-sm-8">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
      </div>
      <div class="col-sm-3">
        {{ form_label(form.price) }}
        {{ form_widget(form.price, { attr: { class: 'text-right' } }) }}
      </div>
      <div class="col-sm-1">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" tabindex="-1"><span aria-hidden="true">&times;</span></button>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-8">
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
      </div>
    </div>
  </div>
{% endspaceless %}
{% endblock %}
